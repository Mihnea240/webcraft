{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@types/*": ["./types/*"],
      "@engine/*": ["./engine/*"],
      "@utils/*": ["./utils/*"],
      "@voxel/*": ["./engine/voxel/*"],
      "@block-model/*": ["./engine/block_model/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.mjs",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "archive"
  ],
}
