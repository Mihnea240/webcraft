{
  "compilerOptions": {
    "target": "ES2023",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "noEmit": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "@types/*": ["./types/*"],
      "@engine/*": ["./engine/*"],
      "@utils/*": ["./engine/utils/*"],
      "@resources/*": ["./resources/*"],
      "@web-components/*": ["./web_components/*"],
      "@examples/*": ["./examples/*"],
	  "@chunk/*": ["./engine/chunk/*"],
      
      // Engine subsystems
      "@voxel/*": ["./engine/chunk/*"],
      "@block/*": ["./engine/block/*"],
      "@player/*": ["./engine/player/*"],
      "@world/*": ["./engine/world/*"]
    }
  },
  "include": [
    "**/*.js",
    "**/*.mjs",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "archive"
  ],
}
